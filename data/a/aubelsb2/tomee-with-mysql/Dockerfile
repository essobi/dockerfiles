FROM tomee:8-jre-1.7.3-jaxrs  
MAINTAINER Arran Ubels <a.ubels@base2services.com>  
  
RUN wget --no-check-certificate
https://dev.mysql.com/get/Downloads/Connector-J/mysql-connector-
java-5.1.33.tar.gz -O - | tar -xz -C /usr/local/tomee/lib/ --strip-
components=1 mysql-connector-java-5.1.33/mysql-connector-java-5.1.33-bin.jar  

