FROM sonarqube:6.5-alpine  
  
RUN wget -P /opt/sonarqube/extensions/plugins/
https://github.com/SonarOpenCommunity/sonar-
cxx/releases/download/cxx-0.9.7/sonar-cxx-plugin-0.9.7.jar && \  
wget -P /opt/sonarqube/extensions/plugins/
https://github.com/Pablissimo/SonarTsPlugin/releases/download/v1.1.0/sonar-
typescript-plugin-1.1.0.jar  

