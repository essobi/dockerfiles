FROM alpine:3.6  
  
MAINTAINER isdc  
  
ENV TZ="America/Denver" \  
LANG="C.UTF-8"  
RUN apk update && \  
apk add bash && \  
apk add iputils && \  
apk add htop && \  
apk add curl && \  
apk add openssl && \  
apk add socat && \  
apk add netcat-openbsd && \  
apk add openssh-keygen && \  
apk add openssh-client && \  
apk add collectd && \  
apk add rsync  

