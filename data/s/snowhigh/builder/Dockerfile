automake \  
build-essential \  
g++ \  
gcc \  
git \  
ipv6toolkit \  
libbsd-dev \  
libglib2.0-dev \  
libgnet-dev \  
libgoogle-glog-dev \  
libnet1-dev \  
libpcap-dev \  
libpoco-dev \  
libssl-dev \  
libzmq3-dev \  
make \  
subversion \  
uuid-dev \  
vim  
  
ADD vimrc /root/.vimrc  
WORKDIR /work  
  
CMD ["bash"]  

