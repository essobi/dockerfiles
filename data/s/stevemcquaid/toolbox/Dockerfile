FROM ubuntu:16.04  
  
RUN apt-get update && apt-get install -y aptitude  
  
RUN apt install -y \  
dialog \  
apt-utils  
  
RUN apt install -y \  
curl \  
arping \  
arp-scan \  
bind9-host \  
dhcping \  
dnsutils \  
git \  
iptables \  
iputils-ping \  
mtr \  
nano \  
netcat \  
net-tools \  
nmap \  
tcpdump \  
telnet \  
tftp-hpa \  
traceroute \  
vim \  
wget  
  
RUN apt upgrade -y  

