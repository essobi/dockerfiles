FROM ubuntu:14.04  
MAINTAINER Tim Sutton <tim@kartoza.com>  
  
RUN export DEBIAN_FRONTEND=noninteractive  
ENV DEBIAN_FRONTEND noninteractive  
RUN dpkg-divert --local \--rename --add /sbin/initctl  
  
# Use local cached debs from host (saves your bandwidth!)  
# Change ip below to that of your apt-cacher-ng host  
# Or comment this line out if you do not wish to use caching  
ADD 71-apt-cacher-ng /etc/apt/apt.conf.d/71-apt-cacher-ng  
  
# Install curl  
RUN apt-get -y update && apt-get install -y curl rpl  
  
# Download and extract the executable to /usr/bin  
RUN curl -o /usr/bin/btsync.tar.gz http://download-
lb.utorrent.com/endpoint/btsync/os/linux-x64/track/stable  
RUN cd /usr/bin && tar -xzvf btsync.tar.gz && rm btsync.tar.gz  
  
# Web GUI  
EXPOSE 8888  
# Listening port  
EXPOSE 55555  
ADD btsync.conf /tmp/btsync.conf  
ADD start.sh /start.sh  
  
CMD ["/start.sh"]  

