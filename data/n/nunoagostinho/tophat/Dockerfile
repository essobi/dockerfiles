FROM ubuntu:16.10  
MAINTAINER Nuno Agostinho <nunodanielagostinho@gmail.com>  
  
RUN apt-get update  
  
RUN apt-get install -y tophat  
RUN echo 'alias tophat-fusion="echo TopHat-Fusion engine is incorported into
TopHat2. Use the tophat command with the --fusion-search option instead."' >>
~/.bashrc

