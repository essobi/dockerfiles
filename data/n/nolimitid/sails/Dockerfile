############################################################  
# Dockerfile for Node.js to run sails.js API application  
############################################################  
  
FROM node:0.12.0  
  
MAINTAINER Andi N. Dirgantara <andi.n.dirgantara@gmail.com>  
  
RUN npm install -g sails@0.10.5 grunt bower pm2 npm-check-updates  
  
# Expose ports.  
EXPOSE 1337

