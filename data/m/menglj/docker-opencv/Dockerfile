from ubuntu:14.04  
  
run apt-get update  
  
run apt-get install -y -q wget curl unzip  
run apt-get install -y -q build-essential  
run apt-get install -y -q cmake libgtk2.0-dev pkg-config libavcodec-dev
libavformat-dev libswscale-dev  
run apt-get install -y -q python-dev python-numpy libtbb2 libtbb-dev libjpeg-
dev libpng-dev libtiff-dev libjasper-dev libdc1394-22-dev libgtkglext1-dev  
  
add build_opencv.sh /build_opencv.sh  
run /bin/sh /build_opencv.sh  
run rm -rf /build_opencv.sh  

