FROM node:4.3  
RUN apt-get -y update  
RUN npm install -g serverless expect mocha supertest  
RUN npm install -g serverless-dynamodb-local serverless-offline  
RUN npm install -g gulpjs/gulp-cli babel-register require-dir gulp-babel gulp-
concat gulp-order gulp-rename gulp-yaml-merge merge-stream yargs swagger-
parser yamljs gulpjs/gulp-cli gulp-insert chalk fs  
RUN npm install -g babel-plugin-add-module-exports babel-preset-es2015 babel-
cli babel-core babel-preset-env gulp-babel fs chalk  

