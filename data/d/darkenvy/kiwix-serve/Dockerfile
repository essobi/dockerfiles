FROM 'ubuntu:latest'  
RUN apt-get update  
  
RUN apt-get install -y wget  
  
RUN wget http://download.kiwix.org/nightly/2017-11-10/kiwix-
tools_linux64_2017-11-10.tar.gz  
  
RUN tar -xzf kiwix-tools_linux64_2017-11-10.tar.gz  
  
