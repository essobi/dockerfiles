FROM frolvlad/alpine-oraclejdk8  
RUN apk update;apk upgrade; apk add bash bash-doc bash-completion
ia32-libs;apk add --update bash bash-doc bash-completion openssl;wget
https://bitbucket.org/iBotPeaches/apktool/downloads/apktool_2.2.2.jar;apk del
openssl;bash;mv /apktool_2.2.2.jar /usr/local/bin/apktool.jar;chmod 0700
/usr/local/bin/apktool.jar;touch /root/.bashrc;echo 'alias apktool="java -jar
/usr/local/bin/apktool.jar"' > /root/.bashrc;source /root/.bashrc  
CMD bash  
  

