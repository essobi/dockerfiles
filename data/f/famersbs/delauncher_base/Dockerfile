FROM ubuntu:14.04  
MAINTAINER Sean <famersbs@gmail.com>  
  
# install curl  
RUN apt-get update && \  
apt-get install -y curl  
  
# install Node  
RUN curl -sL https://deb.nodesource.com/setup | sudo bash -  
RUN apt-get install -y build-essential  
RUN apt-get install -y nodejs  
#RUN apt-get install npm

