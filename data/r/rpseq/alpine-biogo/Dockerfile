# A minimal golang image  
FROM golang:alpine  
  
# ryan.smith.p@gmail.com  
MAINTAINER Ryan Smith  
  
# Install utils  
RUN apk add \--no-cache vim git bash curl  
  
# Install biogo packages  
RUN go get github.com/biogo/biogo/...  
RUN go get github.com/biogo/hts/...  
RUN go get github.com/biogo/ncbi/...  
RUN go get github.com/biogo/store/...  
RUN go get github.com/biogo/external/...  
RUN go get github.com/biogo/ragel/...  
RUN go get github.com/biogo/rnaseq/...  
RUN go get github.com/biogo/illumina/...  
RUN go get github.com/biogo/graph/...  
RUN go get github.com/biogo/cluster/...  
  
# mercurial is needed for biogo graphics  
RUN apk add \--no-cache mercurial && \  
go get github.com/biogo/graphics/...  
  
# Enter bash shell  
ENTRYPOINT ["bash"]  
  

