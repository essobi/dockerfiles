FROM packpack/packpack:ubuntu-trusty  
RUN add-apt-repository -y ppa:benoit.pierre/plover  
RUN apt-get update -y  
# Plover dependencies.  
RUN apt-get install -y \  
pyqt5-dev-tools \  
python3 \  
python3-appdirs \  
python3-babel \  
python3-hid \  
python3-mock \  
python3-pkg-resources \  
python3-pytest \  
python3-serial \  
python3-setuptools \  
python3-setuptools-pyqt \  
python3-setuptools-scm \  
python3-xlib \  
;  

